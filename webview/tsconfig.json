{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "types": [
            "svelte"
        ]
    },
    "include": [
        "src/**/*",
        "src/**/*.svelte"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}